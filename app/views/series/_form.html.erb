<%= form_with(model: serie) do |form| %>
  <% if serie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(serie.errors.count, "error") %> prohibited this serie from being saved:</h2>

      <ul>
        <% serie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :cover_page %>
    <%= form.text_field :cover_page %>
  </div>

  <div class="field">
    <%= form.label :prequel_id %>
    <%= form.number_field :prequel_id %>
  </div>

  <div class="field">
    <%= form.label :sequel_id %>
    <%= form.number_field :sequel_id %>
  </div>

<div>
  <h2>Episodes</h2>
  <table>
    <thead>
      <tr>
        <th>Number</th>
        <th>Name</th>
        <th>Aired</th>
        <th>Duration</th>
      </tr>
    </thead>
    <tbody>
      <%= form.fields_for :episodes do |detail_form| %>
        <tr>
          <td><%= detail_form.number_field :number %></td>
          <td><%= detail_form.time_field :duration %></td>
          <td><%= detail_form.text_field :name %></td>
          <td><%= detail_form.date_field :aired %></td>
          <td><%= detail_form.check_box :_destroy %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
